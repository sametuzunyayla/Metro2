@using Metro.Models
@model  List<GorevBilgileri>

@{
    ViewBag.Title = "GorevListele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Görev Listesi</h2>


<!DOCTYPE html>
<html lang="en">
<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container" style="width:100%;">
        <input class="form-control" id="myInput" type="text" placeholder="Search..">
        <br>
        <table class="table table-bordered table-striped">

            <tbody id="myTable">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Gorev_Adı)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Aciklamasi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].KategoriAdi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].IsOnceligi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Yonetici)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Gorevli)
                    </th>


                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gorev_Adı)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aciklamasi)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.KategoriAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsOnceligi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Yonetici)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gorevli)
                    </td>




                   <td>
                        @Html.ActionLink("Edit", "Edit", new { ID = item.GorevId }) |
                        
                        @Html.ActionLink("Delete", "Delete", new { ID = item.GorevId })
                    </td>
                </tr>}

            </tbody>
        </table>


    </div>

    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

</body>
</html>








